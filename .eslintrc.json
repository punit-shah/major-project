{
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "PRODUCTION": "readonly",
    "HOMEPAGE": "readonly"
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": "warn",
    "no-unused-vars": "warn"
  }
}
